/* 16 aug css start here */


.custom-blog-slider .post-thumbnail{
  position: relative;
}
.custom-blog-slider .post-thumbnail::before {
    position: absolute;
    content: "";
    background: #00000085;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 1;
}
.custom-blog-slider .content_blog_slider {
    padding: 20px;
    position: absolute;
    top: 50%;
    text-align: left;
    transform: translate(0, -50%);
    left: 10%;
    background-color: transparent !important;
    bottom: auto !important;
    z-index: 9;
}
.custom-blog-slider span.posted-on span.cg {
    font-weight: 600;
    font-size: 16px;
    text-transform: uppercase;
    color: #fff;
}
.custom-blog-slider ul.slick-dots {
    bottom: 40px;
}
.custom-blog-slider ul.slick-dots li button:before {
    width: 100%;
    background: #ffffff;
    height: 10px;
    font-size: 0;
    color: red;
    opacity: 1;
    border-radius: 50%;
}
.custom-blog-slider .slick-next, .custom-blog-slider .slick-prev{
  top: auto;
  bottom: 26px;
  z-index: 99999;
  background: transparent !important;
  border: none !important;
}
.custom-blog-slider .slick-next:before, .custom-blog-slider .slick-prev:before{
  font-size: 57px;
}
.custom-blog-slider ul.slick-dots li.slick-active button:before {
    background: #ffca39;
}
.custom-blog-slider ul.slick-dots li {
    width: 10px;
    height: 10px;
    margin: 0 20px
}
.custom-blog-slider ul.slick-dots li button{
  height: 10px;
}
.custom-blog-slider h2.post-title {
    font-size: 35px;
    font-weight: 800;
    line-height: 1;
    max-width: 413px;
    color: #fff;
    
    padding-bottom: 10px;
}
.custom-blog-slider .content_blog_slider p {
    color: #fff;
    font-size: 14px;
    max-width: 500px;
    padding-bottom: 20px;
}
.custom-blog-slider a.articl-link {
    background: #ffca39;
