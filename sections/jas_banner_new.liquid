{%- include 'style_mp_section' -%}
<div class="sliderss jas_custom_{{section.id}} jas_banner_new {%- if section.settings.use_container %} jas-container{%- else %} jas-full{%- endif -%}">
  <div class="jas-row">
    {%- for block in section.blocks -%}{%- assign image = block.settings.image -%}{%- assign url = block.settings.url -%}
    <div class="jas-col-sm-{{block.settings.width}} jas-col-xs-12">
      <div class="jas_banner_wrap pr oh">
        <div>
          {%- if image != blank -%}
          <div class="banner_img lazyload" style="padding-bottom:{{ 1 | divided_by: image.aspect_ratio | times: 100}}%" data-bgset="{%- include 'bgset', image: image -%}" data-sizes="auto" data-parent-fit="cover"></div>
          {%- else -%}
          <div class="banner_img" style="padding-bottom:100%;background-image: url(https://placehold.it/600x600.png?text=Banner+Image)"></div>
          {%- endif -%}
         {%- if url != blank -%} <a href="{{url}}" class="link_over_nt pa"></a>{%- endif -%}
          <div class="pa flex column center-xs middle-xs pe_none">
            <h3 class="cw mt__0 mb__30 lh__1 fs__{{section.settings.fs}} f__libre">{{block.settings.title}}</h3>
            {%- if url != blank and block.settings.btn_title != blank -%}<a href="{{url}}" class="pe_auto fs__14" style="background-color: {{block.settings.color}}">{{block.settings.btn_title}}</a>{%- endif -%}
          </div>
        </div>
      </div>
    </div>
    {%- endfor -%}
  </div>
</div>

{% schema %}
  {
    "name": "Promotion Banner 2",
    "class": "jas-section type_jas_banner_new clearfix",
    "max_blocks": 30,
    "settings": [
