{%- include 'style_mp_section' -%}
<div class="jas_custom_{{section.id}} jas-banner-parallax {%- if section.settings.use_parallax == false %} gecko-parallax{%- endif %}{%- if section.settings.use_background_overlay %} jas_background-overlay{%- endif %}{%- if section.settings.use_parallax == false and section.settings.image != blank %} lazyload{%- endif %}{%- if section.settings.full_height %} jas-full-height{%- endif -%}"{%- if section.settings.use_parallax and section.settings.image != blank %} data-jas-parallax='1.5' data-jas-parallax-image='{{ section.settings.image | img_url: '50x50' }}'{%- endif %}{%- if section.settings.image != blank or section.settings.section_bg_color != blank %} data-bgset="{%- include 'bgset', image: section.settings.image -%}" data-sizes="auto" data-parent-fit="cover" style="{%- if section.settings.section_bg_color != blank -%}background-color: {{section.settings.section_bg_color}};{%- endif -%}{%- if section.settings.image != blank and section.settings.use_parallax == false -%}background-image: url('{{ section.settings.image | img_url: '50x50' }}');{%- endif -%}{%- endif -%}>
  <div class="jas-container clearfix">
              <div class="container">
           <div class="revolution-inner">
               {%- case section.settings.style_text -%}
                  {%- when '1' -%}
                     {%- if section.settings.title != blank -%}<h2 class="h2_title tc tu fs__14 cw fwb mg__0">{{ section.settings.title }}</h2>{%- endif -%}
                     {%- if section.settings.title_last != blank -%}<h2 class="h2_sub tc tu cw fs__50 fwb">{{ section.settings.title_last }}</h2>{%- endif -%}
                     {%- if section.settings.link != blank and section.settings.button != blank -%}<p class="tc mg__0"><a class="cw tu button-o-w" href="{{section.settings.link}}">{{section.settings.button}}</a></p>{%- endif -%}
                  {%- when '2' -%}
                     {%- if section.settings.title != blank -%}<h2 class="h2_title fs__18 lh__1 f__libre tc cw">{{ section.settings.title }}</h2>{%- endif -%}
                     {%- if section.settings.title_last != blank -%}<h2 class="h2_sub tu fs__60 mt__20 mb__20 fwb lh__1 cw tc">{{ section.settings.title_last }}</h2>{%- endif -%}
                     {%- if section.settings.link != blank and section.settings.button != blank -%}<p class="tc mg__0"><a class="button-o-w tc cw" href="{{section.settings.link}}">{{section.settings.button}}</a></p>{%- endif -%}
                  {%- when '3' -%}
                     {%- if section.settings.title != blank -%}<h2 class="h2_title tu fs__60 fwb cw tc mb__20 mt__0 lh__1">{{ section.settings.title }}</h2>{%- endif -%}
                     {%- if section.settings.title_last != blank -%}<h2 class="h2_sub fs__18 f__libre tc cw mb__30 lh__1">{{ section.settings.title_last }}</h2>{%- endif -%}
                     {%- if section.settings.link != blank and section.settings.button != blank -%}<p class="tc mg__0"><a class="button button-o-w tc cw" href="{{section.settings.link}}">{{section.settings.button}}</a></p>{%- endif -%}
                  {%- when '4' -%}
                    <div class="tc">
                     {%- if section.settings.title != blank -%}<h2 class="h2_title fs__50 tu cgreen fwb mg__0 ls__1">{{ section.settings.title }}</h2>{%- endif -%}
                     {%- if section.settings.title_last != blank -%}<h2 class="h2_sub fs__14 f__libre cd mg__0 ls__1 mb__20">{{ section.settings.title_last }}</h2>{%- endif -%}
                     {%- if section.settings.link != blank and section.settings.button != blank -%}<p class="mg__0"><a class="button button-o-w tc cw" href="{{section.settings.link}}">{{section.settings.button}}</a></p>{%- endif -%}
                    </div>
                  {%- when '5' -%}
                     {%- if section.settings.title != blank -%}<h2 class="h2_title fs__20 f__libre tc cw lh__1 mg__0">{{ section.settings.title }}</h2>{%- endif -%}
                     {%- if section.settings.title_last != blank -%}<h2 class="h2_sub tu fs__50 ls__1 mt__20 mb__20 fwb tc cw lh__1">{{ section.settings.title_last }}</h2>{%- endif -%}
                  {%- when '6' -%}
                    {%- if section.settings.title != blank -%}<h3 class="fs__18 lh__1 f__libre tc cw">{{ section.settings.title }}</h3>{%- endif -%}
                    {%- if section.settings.title_last != blank -%}<h2 class="tu fs__60 mt__20 mb__20 fwb lh__1 cw tc">{{ section.settings.title_last }}</h2>{%- endif -%}
                    {%- if section.settings.link != blank and section.settings.button != blank -%}<p style="text-align: center;"><a class="button-o-w tc cw" href="{{section.settings.link}}" rel="noopener">{{section.settings.button}}</a></p>{%- endif -%}
               {%- endcase -%}
           <p style="color:#fff;" class="mg__0 tc">{{section.settings.content_html}}</p>
             {%- if section.settings.link != blank and section.settings.button != blank -%}                                                                                                 
               <a class="button-o-w tc" href="{{section.settings.link}}">{{section.settings.button}}</a>         
             {%- endif -%}
           </div>
                <div class="icons">
      <div class="jas-row ">
        <div>
          <div class="logo-row">
            <div class="logo-bar__item pr jas-col-xs-12 col-md-4" >
              <div class="flex-box">
              <i class="fa-solid fa-battery-full"></i>
              <h1 style="color:#fff;">$26.8B</h1>
              </div>
              <div class="box-content">
                <p>The <span style=" color:#ffc90f;">global battery energy storage</span> market is expected to hit <span style=" color:#ffc90f;">$26.8B</span> by 2028</p>
              </div>
            </div>
            <div class="logo-bar__item pr jas-col-xs-12 col-md-4" >
              <div class="flex-box">
              <i class="fa-solid fa-sun"></i>
              <h1 style="color:#fff;">$293B</h1>
              </div>   
              <div class="box-content">
                <p>The <span style=" color:#ffc90f;">global solar power market</span> is expected to hit <span style=" color:#ffc90f;">$293B</span> by 2028.</p>
              </div>
            </div>
            <div class="logo-bar__item pr jas-col-xs-12 col-md-4" >
              <div class="flex-box">
              <i class="fa-solid fa-solar-panel"></i>
              <h1 style="color:#fff;">174%</h1>
              </div>
              <div class="box-content">
                <p>In Canada alone, the <span style=" color:#ffc90f;">solar installation</span> market has grown by <span style=" color:#ffc90f;">174%</span> in the past year.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
         </div>
    
</div>
<style>
.revolution-inner h2 {
    font-size: 35px;
} 
  .icons {
    margin: 0 auto;
}
  .flex-box{
    display: flex;
    flex: auto;
    gap: 12px;
        justify-content: center;
  }
  .jas-row {
    justify-content: center;
}
  .logo-row{
    display: flex;
    padding-top:20px;
    gap: 25px;
  }
  .logo-bar__item img{
    filter: invert(85%) sepia(26%) saturate(2961%) hue-rotate(369deg) brightness(119%) contrast(102%);
    width: 55px;
    height: 100%;
    display: block;
  }
  .box-content {
    text-align: center;
    color:#fff;
}
  @media(max-width:768px){
    .logo-row{
      flex-direction:column;
    }
  }
</style>
{% schema %}
  {
    "name": "Promotion Banner Parallax",
    "class": "jas-section type_jas_promotion_banner_parallax clearfix",
    "settings": [
      {
        "type": "header",
        "content": "== General Settings"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Background Image"
      },
      {
        "type": "color",
        "id": "section_bg_color",
        "label": "Background color",
        "default": "#ffa800"
      },
       {
        "type": "checkbox",
        "id": "full_height",
        "label": "Full height row?",
        "info": "if checked row will be set to full height.",
        "default": false
      },
      {
         "type": "header",
         "content": "== CUSTOMIZE YOUR TEXT"
      },
      {
        "type": "select",
        "id": "style_text",
        "label": "Style Text: (optional)",
        "default": "1",
        "options": [
          {
            "value": "1",
            "label": "Style 1"
          },
          {
            "value": "2",
            "label": "Style 2"
          },
          {
            "value": "3",
            "label": "Style 3"
          },
          {
            "value": "4",
            "label": "Style 4 (home organic)"
          },
          {
            "value": "5",
            "label": "Style 5 (home fashion 2)"
          },
          {
            "value": "6",
            "label": "Style 6"
          }
        ]
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title 1: ",
        "default": "Title 1"
      },
      {
        "type": "text",
        "id": "title_last",
        "label": "Title 2: ",
        "default": "Title 2"
      },
      {
        "type": "html",
        "id": "content_html",
        "label": "Content: ",
        "default": "Content"
      },
      {
        "type": "text",
        "id": "button",
        "label": "Button Title: ",
        "default": "Button Title"
      },
      {
        "type":"url",
        "id":"link",
        "label":"Link",
        "info": "Optional"
      },
     {
        "type": "header",
        "content": "== Design Options"
      },
      {
        "type": "text",
        "id": "section_margin_top",
        "label": "Margin top",
        "info": "60px"
      },
      {
        "type": "text",
        "id": "section_margin_bottom",
        "label": "Margin bottom",
        "info": "60px"
      },
      {
        "type": "text",
        "id": "section_margin_left",
        "label": "Margin left",
        "info": "60px"
      },
      {
        "type": "text",
        "id": "section_margin_right",
        "label": "Margin right",
        "info": "60px"
      },
      {
        "type": "text",
        "id": "section_padding_top",
        "label": "Padding top",
        "info": "60px"
      },
      {
        "type": "text",
        "id": "section_padding_right",
        "label": "Padding right",
        "info": "60px"
      },
      {
        "type": "text",
        "id": "section_padding_bottom",
        "label": "Padding bottom",
        "info": "60px"
      },
      {
        "type": "text",
        "id": "section_padding_left",
        "label": "Padding left",
        "info": "60px"
      },
      {
        "type": "header",
        "content": "== Gecko Extras"
      },
      {
        "type": "checkbox",
        "id": "use_parallax",
        "label": "Use Gecko parallax?",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "use_background_overlay",
        "label": "Use background overlay?",
        "default": false
      }
    ]
  }
{% endschema %}
