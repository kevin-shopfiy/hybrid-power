<style>
  .second-module-section .application_sldeshow_main .application_sldeshow img{
    width: 100%;
  }
  @media only screen and (min-width:769px) {
    .slideshow_application_section {
      display: flex;
      flex-wrap: wrap;
    }
    .second-module-section .application_sldeshow_main{
      margin: 0px;
      min-width: 33.33%;
      width: 33.33%;
    }
  }
</style>

<div class="second-module-section">
<div class="container">
<div class="home-imagebox-main {% if section.settings.text_alighment != blank %} {{section.settings.text_alighment}} {% endif %}" style="background-color : {{section.settings.background_color}} !important; ">

  <h2 class="h2_sub" style="color: {{section.settings.heading_color}} !important;">
      {% if section.settings.text_heading != blank %}
      {{section.settings.text_heading}}
      {% endif %}
    </h2>
  <div id="home-imagebox" class="index-section">

    
<div class="slideshow_application_section" style="width:100% ; ">
  {% for block in section.blocks %}
  <div class="application_sldeshow_main">
  <div class="application_sldeshow">
    <img src="{{ block.settings.image | img_url:'master'}}"/>
  </div>
    
    <div class="hover-effect">
  
   <h4 class="battpack_application" style="color: {{block.settings.title_color}} !important;">
      {% if block.settings.title != blank %}
      {{block.settings.title}}
      {% endif %}
    </h4>
      
      {% if block.settings.image3 != blank %}
  <div class="image-inner">
    <img src="{{ block.settings.image3 | img_url:'master'}}"/>
  </div>
       {% endif %}
    </div>
    {% if block.settings.text_heading != blank %}
    <div class="application-hover">
       <p class="h2_application" style="color: {{block.settings.heading_color}} !important;">
      
      {{block.settings.text_heading}}
    
    </p>
    </div>
        {% endif %}
  </div>
{%endfor%}
  </div>

</div>
</div>
</div>
</div>
<script>
jQuery('.slideshow_application_section').slick({
  speed: 300,
  dots:true,
  slidesToShow: 3,
  slidesToScroll: 1,
  responsive: [
    {
      breakpoint: 1024,
      settings: {
        infinite: true,
        dots: true
      }
    },
    {
      breakpoint: 600,
      settings: {
        slidesToShow: 2,
      }
    },
    {
      breakpoint: 480,
      settings: {
        slidesToShow: 1,
      }
    }
    // You can unslick at a given breakpoint now by adding:
    // settings: "unslick"
    // instead of a settings object
  ]
});
</script>
