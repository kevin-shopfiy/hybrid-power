{%- assign position_img_1 = 0 -%}
{%- assign position_img_2 = 1 -%}
{%- assign hide_img_2 = false -%}
{%- assign featured_image = '' -%}
{%- assign images_size = product.images.size -%}
{%- if settings_pr_img_size and images_size > 0 -%}
   <a data-chksrc="{{ product.images[position_img_1] | img_url: '50x50' }}" class="nt_bg_lz jas_bg jas-product-img-element jas-pr-image-link lazyload" href="{{ url_nt | within: collection }}" data-bgset="{%- include 'bgset', image: product.images[position_img_1] -%}" data-sizes="auto" data-parent-fit="cover"></a>
   {%- if settings.show_pr_img_2 and images_size > 1 -%}
   <div class="cursor-pointer jas-product-img-element jas-hover-img pa{%- if hide_img_2 %} hide{%- endif -%}"><a href="{{ url_nt | within: collection }}" class="nt_bg_lz jas_bg db lazyload lazypreload" data-bgset="{%- include 'bgset', image: product.images[position_img_2] -%}" data-sizes="auto" data-parent-fit="cover"></a></div> 
   {%- endif -%} 
{%- elsif images_size > 0 -%}
   <a class="jas-product-img-element jas-pr-image-link" href="{{ url_nt | within: collection }}">
      {%- assign img_url = product.images[position_img_1] | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
      <img data-src="{{ product.images[position_img_1] | img_url: '50x50' }}" data-chksrc="{{ product.images[position_img_1] | img_url: '50x50' }}" data-src="{{ img_url }}" data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]" data-aspectratio="{{ product.images[position_img_1].aspect_ratio }}" data-sizes="auto" class="lazyload attachment-shop_catalog size-shop_catalog" alt="{{product.images[position_img_1].alt}}">
      <div class="jas-wrap-lazy"></div>
   </a>
   {%- if settings.show_pr_img_2 and images_size > 1 -%}
   <div class="cursor-pointer jas-product-img-element jas-hover-img pa{%- if hide_img_2 %} hide{%- endif -%}">
      <a href="{{ url_nt | within: collection }}">
         {%- assign img_url = product.images[position_img_2] | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
         <img data-src="{{ product.images[position_img_2] | img_url: '50x50' }}" data-src="{{ img_url }}" data-widths="[180, 360, 540, 720, 900, 1080, 1296, 1512, 1728, 2048]" data-aspectratio="{{ product.images[position_img_2].aspect_ratio }}"  data-sizes="auto" class="lazyload lazypreload attachment-shop_catalog size-shop_catalog" alt="{{product.images[position_img_2].alt}}">       
         <div class="jas-wrap-lazy"></div>
      </a>
   </div>
   {%- endif -%}   
{%- endif -%}
 

